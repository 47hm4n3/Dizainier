            android:id="@+id/seg0"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal">

            <Button
                android:id="@+id/b00"
                android:layout_width="35dp"
                android:layout_height="45dp"
                android:text="0" />

            <Button
                android:id="@+id/b01"
                android:layout_width="35dp"
                android:layout_height="45dp"
                android:text="1" />

            <Button
                android:id="@+id/b02"
